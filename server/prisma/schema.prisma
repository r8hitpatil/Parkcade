generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String     @id @default(uuid())
  name      String
  email     String     @unique
  password  String
  bookings  Booking[]
  locations Location[]
}

model Location {
  id        String         @id @default(uuid())
  location  String
  pricing   Float
  createdAt DateTime       @default(now())
  ownerId   String
  bookings  Booking[]
  owner     User           @relation(fields: [ownerId], references: [id])
  timeSlots TimeDuration[]
}

model TimeDuration {
  id         String    @id @default(uuid())
  timeIs     DateTime
  locationId String
  bookings   Booking[]
  location   Location  @relation(fields: [locationId], references: [id])
}

model Booking {
  id                String        @id @default(uuid())
  userId            String
  locationId        String
  timeSlotId        String
  amount            Float
  paymentStatus     PaymentStatus @default(PENDING)
  razorpayOrderId   String?       @unique
  razorpayPaymentId String?
  isBooked          Boolean       @default(false)
  createdAt         DateTime      @default(now())
  location          Location      @relation(fields: [locationId], references: [id])
  timeSlot          TimeDuration  @relation(fields: [timeSlotId], references: [id])
  user              User          @relation(fields: [userId], references: [id])
}

enum PaymentStatus {
  PENDING
  SUCCESS
  FAILED
  REFUNDED
}
